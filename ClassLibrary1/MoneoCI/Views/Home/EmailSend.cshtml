@model Models.EmailViewModel

@{
	ViewData["Title"] = "EmailSend";
}
<style>
	.inputdemoErrors .inputErrorsApp {
  min-height: 48px; }
.inputdemoErrors md-input-container > p {
  font-size: 0.8em;
  text-align: left;
  width: 100%; }
</style>
<script>

	app.controller('EmailSendController', ['$scope',
		function ($scope) {
			
		}]);;

</script>
<h2>EmailSend</h2>
<div ng-controller="EmailSendController">
	<md-content layout-padding>
		<form asp-action="EmailSend" name="emailSend" data-ajax="true" data-ajax-method="POST" >
			<div class="form-horizontal">
				<h4>EmailViewModel</h4>
				<hr />
				<div>
					<md-input-container flex="50">
						<label>Nome</label>
						<input ng-model="user.nome" asp-for="Nome" name="Nome" type="text" required md-autofocus>
						<div ng-messages="emailSend.Nome.$error">
							<div ng-message="required">This is required.</div>
						</div>
					</md-input-container>

					<md-input-container flex="50">
						<label>Email</label>
						<input required name="Email" ng-model="user.email" asp-for="Email">
						<div ng-messages="emailSend.Email.$error" role="alert">
							<div ng-message="required">This is required.</div>
						</div>
					</md-input-container>

					<md-input-container>
						<label>Telefone</label>
						<input required ng-model="user.postalCode" asp-for="Telefone" name="Telefone"  ng-pattern="/^[0-9]{8}$/" >
						<div ng-messages="emailSend.Telefone.$error" role="alert" multiple>
							<div ng-message="required" class="my-message">You must supply a postal code.</div>
							<div ng-message="pattern" class="my-message">CEP nao valido</div>
							
						</div>

					</md-input-container>
				</div>
				<input type="submit" class="btn btn-default" value="Create" />
			</div>
		</form>
	</md-content>
</div>

		<div>
			<a asp-action="Index">Back to List</a>
		</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
